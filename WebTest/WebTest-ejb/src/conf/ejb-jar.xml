<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
        <session>
            <display-name>OurLogicSB</display-name>
            <ejb-name>OurLogicBean</ejb-name>
            <local-home>sessionpackages.OurLogicLocalHome</local-home>
            <local>sessionpackages.OurLogicLocal</local>
            <ejb-class>sessionpackages.OurLogicBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>BiodataBean</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>entitypackages.BiodataLocalHome</local-home>
                <local>entitypackages.BiodataLocal</local>
                <ejb-link>BiodataBean</ejb-link>
            </ejb-local-ref>
            </session>
        <entity>
            <description>jdbc:mysql://localhost:3306/webtest [root on Default schema]</description>
            <display-name>BiodataEB</display-name>
            <ejb-name>BiodataBean</ejb-name>
            <local-home>entitypackages.BiodataLocalHome</local-home>
            <local>entitypackages.BiodataLocal</local>
            <ejb-class>entitypackages.BiodataBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>Biodata</abstract-schema-name>
            <cmp-field>
                <field-name>firtName</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>surName</field-name>
            </cmp-field>
            <primkey-field>firtName</primkey-field>
            <query>
                <query-method>
                    <method-name>findByFirtName</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(b) FROM Biodata AS b WHERE b.firtName = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findBySurName</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(b) FROM Biodata AS b WHERE b.surName = ?1</ejb-ql>
            </query>
            </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>BiodataBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>OurLogicBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
