<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
        <session>
            <display-name>CodeLogicSB</display-name>
            <ejb-name>CodeLogicBean</ejb-name>
            <local-home>sessionpackages.CodeLogicLocalHome</local-home>
            <local>sessionpackages.CodeLogicLocal</local>
            <ejb-class>sessionpackages.CodeLogicBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>StaffrecordsBean</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>entitypackages.StaffrecordsLocalHome</local-home>
                <local>entitypackages.StaffrecordsLocal</local>
                <ejb-link>StaffrecordsBean</ejb-link>
            </ejb-local-ref>
            </session>
        <entity>
            <description>jdbc:mysql://localhost:3306/jee [root on Default schema]</description>
            <display-name>StaffrecordsEB</display-name>
            <ejb-name>StaffrecordsBean</ejb-name>
            <local-home>entitypackages.StaffrecordsLocalHome</local-home>
            <local>entitypackages.StaffrecordsLocal</local>
            <ejb-class>entitypackages.StaffrecordsBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>Staffrecords</abstract-schema-name>
            <cmp-field>
                <field-name>id</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>lastName</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>firstName</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>sex</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>age</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>department</field-name>
            </cmp-field>
            <primkey-field>id</primkey-field>
            <query>
                <query-method>
                    <method-name>findById</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM Staffrecords AS s WHERE s.id = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByLastName</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM Staffrecords AS s WHERE s.lastName = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByFirstName</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM Staffrecords AS s WHERE s.firstName = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findBySex</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM Staffrecords AS s WHERE s.sex = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByAge</method-name>
                    <method-params>
                        <method-param>int</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM Staffrecords AS s WHERE s.age = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByDepartment</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM Staffrecords AS s WHERE s.department = ?1</ejb-ql>
            </query>
            </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>StaffrecordsBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>CodeLogicBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
