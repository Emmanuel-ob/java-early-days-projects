<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>WebApp-ejb</display-name>
    <enterprise-beans>
        <session>
            <display-name>OurLogicSB</display-name>
            <ejb-name>OurLogicBean</ejb-name>
            <local-home>sessionpackages.OurLogicLocalHome</local-home>
            <local>sessionpackages.OurLogicLocal</local>
            <ejb-class>sessionpackages.OurLogicBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>StudentrecordsTbBean</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>entitypackages.StudentrecordsTbLocalHome</local-home>
                <local>entitypackages.StudentrecordsTbLocal</local>
                <ejb-link>StudentrecordsTbBean</ejb-link>
            </ejb-local-ref>
            </session>
        <entity>
            <description>jdbc:mysql://localhost:3306/jee [root on Default schema]</description>
            <display-name>StudentrecordsTbEB</display-name>
            <ejb-name>StudentrecordsTbBean</ejb-name>
            <local-home>entitypackages.StudentrecordsTbLocalHome</local-home>
            <local>entitypackages.StudentrecordsTbLocal</local>
            <ejb-class>entitypackages.StudentrecordsTbBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>StudentrecordsTb</abstract-schema-name>
            <cmp-field>
                <field-name>id</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>surName</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>otherName</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>sex</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>course</field-name>
            </cmp-field>
            <primkey-field>id</primkey-field>
            <query>
                <query-method>
                    <method-name>findById</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM StudentrecordsTb AS s WHERE s.id = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findBySurName</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM StudentrecordsTb AS s WHERE s.surName = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByOtherName</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM StudentrecordsTb AS s WHERE s.otherName = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findBySex</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM StudentrecordsTb AS s WHERE s.sex = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByCourse</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(s) FROM StudentrecordsTb AS s WHERE s.course = ?1</ejb-ql>
            </query>
            </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>OurLogicBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>StudentrecordsTbBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
