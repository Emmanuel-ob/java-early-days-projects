<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
        <session>
            <display-name>LogicHubSB</display-name>
            <ejb-name>LogicHubBean</ejb-name>
            <local-home>sessionpackages.LogicHubLocalHome</local-home>
            <local>sessionpackages.LogicHubLocal</local>
            <ejb-class>sessionpackages.LogicHubBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>ApplicantsinformationBean</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>entitypackages.ApplicantsinformationLocalHome</local-home>
                <local>entitypackages.ApplicantsinformationLocal</local>
                <ejb-link>ApplicantsinformationBean</ejb-link>
            </ejb-local-ref>
            </session>
        <entity>
            <description>jdbc:mysql://localhost:3306/jee [root on Default schema]</description>
            <display-name>ApplicantsinformationEB</display-name>
            <ejb-name>ApplicantsinformationBean</ejb-name>
            <local-home>entitypackages.ApplicantsinformationLocalHome</local-home>
            <local>entitypackages.ApplicantsinformationLocal</local>
            <ejb-class>entitypackages.ApplicantsinformationBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>Applicantsinformation</abstract-schema-name>
            <cmp-field>
                <field-name>email</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>surname</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>othername</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>sex</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>age</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>cv</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>passport</field-name>
            </cmp-field>
            <primkey-field>email</primkey-field>
            <query>
                <query-method>
                    <method-name>findByEmail</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(a) FROM Applicantsinformation AS a WHERE a.email = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findBySurname</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(a) FROM Applicantsinformation AS a WHERE a.surname = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByOthername</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(a) FROM Applicantsinformation AS a WHERE a.othername = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findBySex</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(a) FROM Applicantsinformation AS a WHERE a.sex = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByAge</method-name>
                    <method-params>
                        <method-param>int</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(a) FROM Applicantsinformation AS a WHERE a.age = ?1</ejb-ql>
            </query>
            </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>ApplicantsinformationBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>LogicHubBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
